.category-lists
  .category-title
    font-size: 2.57em

    +maxWidth768()
      font-size: 2em

  .category-list
    margin-bottom: 0

    a
      font-weight: 600
      color: white

      &::before 
        left: -10px;
        content: '|';
        color: #fff;
        font-weight: 600
        margin: -2px 10px 0 0

      &::after     
        content: '';
        position: relative;
        width: 0;
        bottom: 0;
        display: block;
        height: 3px;
        border-radius: 3px;
        background-color: #fff;

    .category-list-count
      color: white
      
      &::before
        content: '\f02d'
        margin-right: 15px
        display: inline-block
        font-family: 'Font Awesome 6 Free'
        font-size: 1.2rem

  ul
    padding: 0 
    display: flex
    flex-wrap: wrap

    li
      cursor: pointer
      font-weight: 600
      padding: 0 2rem
      display: flex
      justify-content: center
      flex-direction: column
      height: 120px
      font-size: 1.5rem
      width: 30%
      margin: 10px 1.66%
      list-style: none
      border-radius: 15px

      &:hover a::after
        width: 100%;
        transition: all .5s;
      
        
      &:nth-child(1)
        background: linear-gradient(to left, rgb(251, 215, 134), rgb(247, 121, 125));
      
      &:nth-child(2)
        background: linear-gradient(to left, rgb(0, 176, 155), rgb(150, 201, 61));
      
      &:nth-child(3)
        background: linear-gradient(to left, rgb(255, 110, 127), rgb(191, 233, 255)); 
      
      &:nth-child(4)
        background: linear-gradient(to left, rgb(239, 50, 217), rgb(137, 255, 253));
      
      &:nth-child(5)
        background: linear-gradient(to left, rgb(192, 192, 170), rgb(28, 239, 255));
      
      &:nth-child(6)
        background: linear-gradient(to left, rgb(255, 95, 109), rgb(255, 195, 113));

      @media screen and (max-width: 950px)
          width: 46%
          margin: 10px 2%

      @media screen and (max-width: 768px)
          width: 95%
          margin: 10px 2.5%
